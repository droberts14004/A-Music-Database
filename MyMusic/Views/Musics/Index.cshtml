@model IEnumerable<MyMusic.Models.Music>

@{
	ViewBag.Title = "Index";
}

<h2>My Music</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Musics", FormMethod.Get))
{
<p>
	Select Genre: @Html.DropDownList("musicsGenre", "All")
	Search Song: @Html.TextBox("SearchString")
	<input type="submit" value="Filter" />
</p>
}

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Song)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Artist)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Album)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Genre)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ReleaseYear)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Song)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Artist)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Album)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Genre)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ReleaseYear)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
				@Html.ActionLink("Details", "Details", new { id = item.ID }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.ID })
			</td>
		</tr>
	}

</table>
